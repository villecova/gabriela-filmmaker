---
import GallerySlugPage from '../../../components/pages/GallerySlugPage.astro';
import es from '../../../i18n/messages/es.json';

export function getStaticPaths() {
  const esProjects = es.portfolio.projects;
  
  return esProjects.map((project) => ({
    params: { slug: project.slug },
    props: { project, locale: 'es', slug: project.slug }
  }));
}

const { slug } = Astro.params;
const { project } = Astro.props;
---

<GallerySlugPage locale="es" project={project} slug={slug} />
