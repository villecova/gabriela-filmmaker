---
import GallerySlugPage from '../../components/pages/GallerySlugPage.astro';
import en from '../../i18n/messages/en.json';

export function getStaticPaths() {
  const enProjects = en.portfolio.projects;
  
  return enProjects.map((project) => ({
    params: { slug: project.slug },
    props: { project, locale: 'en', slug: project.slug }
  }));
}

const { slug } = Astro.params;
const { project } = Astro.props;
---

<GallerySlugPage locale="en" project={project} slug={slug} />
