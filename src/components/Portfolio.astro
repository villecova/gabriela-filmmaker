---
// Puedes recibir esto como prop o definirlo aquí:
const filters = ["All", "Wedding", "Special Occasions", "Custom Events"];

const items = [
  {
    image: "/images/ena-robert.jpg",
    category: "Wedding | Summer",
    title: "Ena & Robert"
  },
  {
    image: "/images/clara-max.jpg",
    category: "Wedding | Summer",
    title: "Clara & Max"
  },
  {
    image: "/images/anne-sven.jpg",
    category: "Wedding | Summer",
    title: "Anne & Sven"
  },
  {
    image: "/images/hanna-simon.jpg",
    category: "Wedding | Summer",
    title: "Hanna & Simon"
  }
];
---

<section class="bg-[#f6f2ed] py-16 px-4">
  <div class="max-w-screen-lg mx-auto">
    <h2 class="text-center text-5xl font-main mb-10">PORTFOLIO</h2>

    <!-- Filtros -->
    <div class="flex justify-center gap-4 mb-8 text-sm font-medium">
      {filters.map(filter => (
        <button
          class="px-4 py-2 border border-transparent rounded-full hover:bg-gray-200 transition"
        >
          {filter}
        </button>
      ))}
    </div>

    <!-- Galería -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {items.map(item => (
        <div class="bg-white overflow-hidden rounded shadow-sm">
          <img src={item.image} alt={item.title} class="w-full object-cover h-64" />
          <div class="p-4">
            <p class="text-xs text-gray-500 uppercase">{item.category}</p>
            <h3 class="text-lg font-medium text-gray-800 mt-1">{item.title}</h3>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
