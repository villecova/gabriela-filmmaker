---
import en from '../i18n/messages/en.json';
import es from '../i18n/messages/es.json';

const lang = Astro.url.pathname.includes('/es') ? 'es' : 'en';
const t = lang === 'es' ? es : en;
---

<section class="bg-white py-20 md:py-32" id="about">
    <div class="max-w-screen-xl mx-auto px-6 md:px-12">
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <!-- Texto -->
        <div data-aos="fade-right">
          <h2 class="text-4xl md:text-5xl lg:text-6xl font-main mb-3 text-taupe tracking-tight">
            {t.about.title}
          </h2>
          <div class="flex items-center gap-4 text-dusty text-xl mb-8">
            <span>•</span><span>•</span><span>•</span>
          </div>

          <!-- Intro poético -->
          <div class="mb-8 space-y-1">
            {t.about.intro.map((line: string) => (
              <p class="text-lg md:text-xl text-taupe/80 italic font-light">{line}</p>
            ))}
          </div>

          <!-- Descripción -->
          <div class="text-sm md:text-base leading-relaxed text-taupe/60 space-y-4 mb-8">
            {t.about.description.split('\n\n').map((paragraph: string) => (
              <p>{paragraph}</p>
            ))}
          </div>

          <!-- Closing -->
          <p class="text-sm md:text-base leading-relaxed text-taupe/70 italic border-l-2 border-dusty pl-4">
            {t.about.closing}
          </p>
        </div>
    
        <!-- Imagen -->
        <div data-aos="fade-left" class="h-[450px] lg:h-[550px] w-full overflow-hidden">
          <img
            src="/assets/images/about2.webp"
            alt="Mario & Gabriela"
            class="w-full h-full object-cover"
          />
        </div>
      </div>

    </div>
  </section>
