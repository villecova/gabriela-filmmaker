---
import Button from "./shared/Button.astro";
import Logo from "./shared/Logo.astro";

import en from '../i18n/messages/en.json';
import es from '../i18n/messages/es.json';

const lang = Astro.url.pathname.includes('/es') ? 'es' : 'en';
const t = lang === 'es' ? es : en;
---

<section class="relative w-full h-screen overflow-hidden flex items-center justify-start text-left pt-16" id="hero">
  <!-- Video de fondo -->
  <video
    autoplay
    muted
    loop
    playsinline
    class="absolute top-0 left-0 w-full h-full object-cover z-0"
  >
    <source src="/assets/videos/hero.mp4" type="video/mp4" />
    Tu navegador no soporta el video HTML5.
  </video>

  <!-- Overlay -->
  <div class="absolute inset-0 bg-taupe bg-opacity-50 z-2"></div>

  <!-- Contenido -->
  <div class="relative z-3 text-white px-8 md:px-16 lg:px-24 max-w-4xl">
    <Logo size="hero" as="h1" class="mb-4" />

    <p class="text-xl md:text-2xl font-secondary mb-6">
      {t.hero.title}
    </p>

    <div class="text-sm md:text-base font-secondary text-white/90 mb-8 space-y-1">
      <p>Moody, cinematic, and deeply atmospheric.</p>
      <p>Weddings with soul & documentary eye.</p>
      <p>Old film tones â€” Raw emotions</p>
    </div>

    <Button href="/portfolio" label="Explore Our Work" variant="tertiary" size="compact" />
  </div>
</section>
