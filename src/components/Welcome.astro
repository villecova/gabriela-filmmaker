---
import Button from "./shared/Button.astro";
import Logo from "./shared/Logo.astro";
import { getLang, getTranslations, getBasePath } from '../i18n/utils.js';

const lang = getLang(Astro.url);
const t = getTranslations(lang);
const base = getBasePath(lang);
---

<section class="relative w-full h-screen overflow-hidden flex items-center justify-start text-left pt-16" id="hero">
  <!-- Video de fondo -->
  <video
    autoplay
    muted
    loop
    playsinline
    class="absolute top-0 left-0 w-full h-full object-cover z-0"
  >
    <source src="/assets/videos/hero.mp4" type="video/mp4" />
  </video>

  <!-- Overlay -->
  <div class="absolute inset-0 bg-taupe bg-opacity-50 z-2"></div>

  <!-- Contenido -->
  <div class="relative z-3 text-white px-6 md:px-12 lg:px-16 max-w-screen-xl mx-auto w-full">
    <div class="max-w-2xl">
      <div data-aos="fade-up" data-aos-duration="1000">
        <Logo size="hero" as="h1" class="mb-6" />

        <p class="text-2xl md:text-3xl lg:text-4xl font-light mb-8 leading-relaxed">
          {t.hero.title}
        </p>

        <div class="text-base md:text-lg font-light text-white/80 mb-10 space-y-1">
          {t.hero.description.map((line: string) => (
            line ? <p>{line}</p> : <p class="h-4"></p>
          ))}
        </div>
      </div>

      <div data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200">
        <Button href={`${base}/gallery`} label={t.grid.cta} variant="tertiary" size="compact" />
      </div>
    </div>
  </div>
</section>
