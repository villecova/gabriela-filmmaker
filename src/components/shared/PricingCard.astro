---
import Button from './Button.astro';

interface Props {
  title: string;
  price: string;
  description: string;
  features: string[];
  buttonText: string;
}

const { title, price, description, features, buttonText } = Astro.props;
---

<div class="flex flex-col justify-between p-6 bg-ivory text-left h-full shadow-sm">
  <div>
    <h3 class="mb-2 text-2xl font-main text-taupe">{title}</h3>
    <p class="font-light text-taupe/70 text-xs">{description}</p>
    <div class="flex justify-start items-baseline mt-2 mb-4">
      <span class="text-xl font-medium text-taupe">{price}</span>
    </div>
    <ul role="list" class="mb-8 space-y-2 text-left">
      {features.map((feature) => (
        <li class="flex items-center space-x-3">
          <svg class="w-5 h-5 text-dusty" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 01.0 1.414l-8 8a1 1 0 01-1.414.0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414.0z" clip-rule="evenodd" />
          </svg>
          <span class="text-xs text-taupe">{feature}</span>
        </li>
      ))}
    </ul>
  </div>
  <Button href="#" label={buttonText} variant="primary" fullWidth />
</div>
