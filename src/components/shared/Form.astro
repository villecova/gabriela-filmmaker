---
import en from '../../i18n/messages/en.json';
import es from '../../i18n/messages/es.json';

const lang = Astro.url.pathname.includes('/es') ? 'es' : 'en';
const t = lang === 'es' ? es : en;
---

<section class="bg-[#f6f2ed] pt-24 md:pt-32 pb-16 px-4" id="contact">
  <div class="max-w-screen-lg mx-auto px-4">
    <div class="text-center mb-10">
      <h2 class="text-4xl md:text-5xl font-main mb-4 text-black">
        {t.contact.title}
      </h2>
      <p class="text-gray-700 max-w-2xl mx-auto leading-relaxed">
        {t.contact.subtitle}
      </p>
    </div>

    <form
      name="wedding-quote"
      method="POST"
      netlify
      netlify-honeypot="bot-field"
      class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-md"
    >
      <input type="hidden" name="form-name" value="wedding-quote" />
      <p class="hidden">
        <label>{t.contact.botField} <input name="bot-field" /></label>
      </p>

      <input required type="text" name="name" placeholder={t.contact.name} class="p-3 border border-gray-300 rounded-md" />
      <input required type="email" name="email" placeholder={t.contact.email} class="p-3 border border-gray-300 rounded-md" />

      <input required type="tel" name="phone" placeholder={t.contact.phone} class="p-3 border border-gray-300 rounded-md" />
      <input required type="date" name="date" class="p-3 border border-gray-300 rounded-md" />

      <input required type="text" name="location" placeholder={t.contact.location} class="md:col-span-2 p-3 border border-gray-300 rounded-md" />
      <input type="number" name="guests" placeholder={t.contact.guests} class="p-3 border border-gray-300 rounded-md" />

      <fieldset class="md:col-span-2">
        <legend class="text-sm font-medium mb-2">{t.contact.services}</legend>
        <div class="grid md:grid-cols-2 gap-2">
          <label><input type="checkbox" name="services" value="Full Video" /> {t.contact.fullVideo}</label>
          <label><input type="checkbox" name="services" value="Teaser" /> {t.contact.teaser}</label>
          <label><input type="checkbox" name="services" value="Save the Date" /> {t.contact.saveDate}</label>
          <label><input type="checkbox" name="services" value="Drone" /> {t.contact.drone}</label>
          <label><input type="checkbox" name="services" value="Guest Messages" /> {t.contact.guestsMessages}</label>
        </div>
      </fieldset>

      <input type="text" name="style" placeholder={t.contact.style} class="md:col-span-2 p-3 border border-gray-300 rounded-md" />
      <input type="text" name="budget" placeholder={t.contact.budget} class="md:col-span-2 p-3 border border-gray-300 rounded-md" />

      <textarea name="message" rows="4" placeholder={t.contact.message} class="md:col-span-2 p-3 border border-gray-300 rounded-md"></textarea>

      <div class="md:col-span-2 text-center">
        <button type="submit" class="bg-accent hover:bg-opacity-90 text-white font-semibold py-3 px-6 rounded-full transition">
          {t.contact.send}
        </button>
      </div>
    </form>
  </div>
</section>
