---
/**
 * Button Component
 * 
 * Variantes:
 * - primary: Botón sólido, fondo lleno - acciones principales
 * - secondary: Botón outline con borde visible - acciones secundarias  
 * - tertiary: Botón sutil/ghost, casi invisible - acciones terciarias
 * 
 * Tamaños:
 * - default: Tamaño normal con padding completo
 * - compact: Tamaño reducido, más ajustado al texto
 */

interface Props {
  href?: string;
  label?: string;
  variant?: 'primary' | 'secondary' | 'tertiary' | 'inverse';
  size?: 'default' | 'compact';
  fullWidth?: boolean;
  class?: string;
}

const { 
  href = "#", 
  label = "Click me", 
  variant = "primary", 
  size = "default",
  fullWidth = false,
  class: className = ''
} = Astro.props;

// Tamaños de padding
const sizeClasses = {
  default: 'px-6 py-3',
  compact: 'px-4 py-3'
};

// Estilos base compartidos
const baseClass = `cursor-pointer uppercase ${sizeClasses[size]} text-xs font-medium tracking-wide rounded text-center block focus:outline-none transition-all duration-300 ${
  fullWidth ? 'w-full' : 'inline-block'
} ${className}`;

// Variantes de estilo
const variantClasses = {
  // Primario: sólido, prominente
  primary: "bg-blush-bg text-taupe hover:bg-dusty hover:text-white border-2 border-blush-bg hover:border-dusty hover:shadow-lg focus:ring-4 focus:ring-blush-bg/50",
  
  // Secundario: outline, borde visible
  secondary: "bg-transparent text-taupe border-2 border-blush-bg hover:bg-blush-bg hover:shadow-lg focus:ring-4 focus:ring-blush-bg/30",
  
  // Terciario: sutil, ghost - para fondos oscuros
  tertiary: "bg-transparent text-white border border-white/40 hover:border-white hover:bg-white hover:text-taupe focus:ring-2 focus:ring-white/20",
  
  // Inverse: para fondos de color (dusty, etc)
  inverse: "bg-taupe text-white border-2 border-taupe hover:bg-white hover:text-taupe hover:border-white hover:shadow-lg focus:ring-4 focus:ring-taupe/30",
};

const classes = `${baseClass} ${variantClasses[variant] ?? variantClasses.primary}`;
---

<a href={href} class={classes} role="button">
  {label}
</a>
