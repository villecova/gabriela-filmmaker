---
interface Props {
  size?: 'small' | 'medium' | 'large' | 'hero';
  as?: 'h1' | 'h2' | 'div' | 'span';
  href?: string;
  class?: string;
  multiline?: boolean;
  showCinema?: boolean;
  'data-collapse-toggle'?: string;
  [key: string]: any;
}

const { 
  size = 'medium', 
  as = 'div',
  href,
  class: className = '',
  multiline = true,
  showCinema = true,
  'data-collapse-toggle': dataCollapseToggle,
  ...rest
} = Astro.props;

// Tama√±os predefinidos
const sizeClasses = {
  small: {
    main: 'text-lg md:text-xl',
    sub: 'text-xs md:text-sm'
  },
  medium: {
    main: 'text-xl md:text-2xl',
    sub: 'text-sm md:text-base'
  },
  large: {
    main: 'text-3xl md:text-4xl',
    sub: 'text-lg md:text-xl'
  },
  hero: {
    main: 'text-5xl md:text-7xl',
    sub: 'text-3xl md:text-5xl'
  }
};

const classes = sizeClasses[size as keyof typeof sizeClasses] || sizeClasses.medium;
const Tag = as;
const isLink = href !== undefined;
const baseClasses = `font-main leading-tight ${className}`;
---

{isLink ? (
  <a 
    href={href} 
    class={baseClasses}
    data-collapse-toggle={dataCollapseToggle}
  >
    {multiline ? (
      <>
        <span class={`block ${classes.main}`}>PolkaDots</span>
        {showCinema && <span class={`block ${classes.sub}`}>Cinema</span>}
      </>
    ) : (
      <span class={classes.main}>PolkaDots{showCinema && <span class={`ml-1 ${classes.sub}`}>Cinema</span>}</span>
    )}
  </a>
) : (
  <Tag class={baseClasses}>
    {multiline ? (
      <>
        <span class={`block ${classes.main}`}>PolkaDots</span>
        {showCinema && <span class={`block ${classes.sub}`}>Cinema</span>}
      </>
    ) : (
      <span class={classes.main}>PolkaDots{showCinema && <span class={`ml-1 ${classes.sub}`}>Cinema</span>}</span>
    )}
  </Tag>
)}

