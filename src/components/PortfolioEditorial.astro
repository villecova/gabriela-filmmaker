---
import en from '../i18n/messages/en.json';
import es from '../i18n/messages/es.json';

const lang = Astro.url.pathname.includes('/es') ? 'es' : 'en';
const t = lang === 'es' ? es : en;
const base = lang === 'es' ? '/es' : '';

const projects = t.portfolio.projects;
---

<section class="bg-ivory min-h-screen pt-32 pb-24">
  <div class="max-w-screen-xl mx-auto px-6 md:px-12">
    
    <!-- Header -->
    <header class="text-center mb-20 md:mb-32">
      <h1 class="text-5xl md:text-7xl font-main text-taupe mb-3 tracking-tight">
        {t.portfolio.title}
      </h1>
      <div class="flex items-center justify-center gap-4 text-dusty text-xl mb-6">
        <span>•</span><span>•</span><span>•</span>
      </div>
      <p class="text-lg md:text-xl text-taupe/60 font-light max-w-2xl mx-auto">
        {t.portfolio.subtitle}
      </p>
    </header>

    <!-- Projects List -->
    <div class="space-y-24 md:space-y-40">
      {projects.map((project, index) => (
        <article 
          class="group"
          data-aos="fade-up"
          data-aos-duration="800"
          data-aos-delay={index * 100}
        >
          <a 
            href={`${base}/gallery/${project.slug}`}
            class="block"
          >
            <div class={`grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
              
              <!-- Image/Video Container -->
              <div class={`lg:col-span-7 ${index % 2 === 1 ? 'lg:order-2' : ''}`}>
                <div class="relative overflow-hidden aspect-[4/3] lg:aspect-[16/10]">
                  <!-- Video preview on hover (desktop) -->
                  <video 
                    class="absolute inset-0 w-full h-full object-cover opacity-0 group-hover:opacity-100 transition-opacity duration-700 pointer-events-none hidden lg:block"
                    muted
                    loop
                    playsinline
                    data-hover-video
                  >
                    <source src={project.video} type="video/mp4" />
                  </video>
                  
                  <!-- Static image -->
                  <img 
                    src={project.image}
                    alt={project.title}
                    class="w-full h-full object-cover transition-all duration-700 ease-out group-hover:scale-105 group-hover:opacity-0 lg:group-hover:opacity-0"
                    loading="lazy"
                  />
                  
                  <!-- Mobile: always show image -->
                  <img 
                    src={project.image}
                    alt={project.title}
                    class="absolute inset-0 w-full h-full object-cover lg:hidden"
                    loading="lazy"
                  />
                </div>
              </div>

              <!-- Text Content -->
              <div class={`lg:col-span-5 ${index % 2 === 1 ? 'lg:order-1 lg:text-right' : ''}`}>
                <div class="space-y-4 md:space-y-6">
                  <!-- Location & Year -->
                  <div class={`flex items-center gap-3 text-xs tracking-widest uppercase text-taupe/50 ${index % 2 === 1 ? 'lg:justify-end' : ''}`}>
                    <span>{project.location}</span>
                    <span class="w-1 h-1 rounded-full bg-taupe/30"></span>
                    <span>{project.year}</span>
                  </div>

                  <!-- Title -->
                  <h2 class="text-3xl md:text-4xl lg:text-5xl font-main text-taupe leading-tight">
                    {project.title}
                  </h2>

                  <!-- Subtitle -->
                  <p class="text-lg md:text-xl text-taupe/70 font-light italic">
                    {project.subtitle}
                  </p>

                  <!-- Description -->
                  <p class="text-sm md:text-base text-taupe/60 leading-relaxed max-w-md">
                    {project.description}
                  </p>

                  <!-- View Film Link -->
                  <div class={`pt-4 ${index % 2 === 1 ? 'lg:text-right' : ''}`}>
                    <span class="inline-flex items-center gap-2 text-sm text-taupe/80 group-hover:text-dusty transition-colors duration-300">
                      <span class="relative">
                        {t.portfolio.viewFilm}
                        <span class="absolute bottom-0 left-0 w-0 h-px bg-dusty group-hover:w-full transition-all duration-500"></span>
                      </span>
                      <svg 
                        class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" 
                        fill="none" 
                        stroke="currentColor" 
                        viewBox="0 0 24 24"
                      >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>

  </div>
</section>

<style>
  /* Subtle line decoration */
  article::before {
    content: '';
    display: block;
    width: 60px;
    height: 1px;
    background: rgba(74, 72, 67, 0.15);
    margin-bottom: 3rem;
  }
  
  article:first-child::before {
    display: none;
  }
</style>

<script>
  // Video hover effect for desktop
  document.addEventListener('DOMContentLoaded', () => {
    const articles = document.querySelectorAll('article.group');
    
    articles.forEach(article => {
      const video = article.querySelector('[data-hover-video]') as HTMLVideoElement;
      
      if (video && window.innerWidth >= 1024) {
        article.addEventListener('mouseenter', () => {
          video.currentTime = 0;
          video.play().catch(() => {});
        });
        
        article.addEventListener('mouseleave', () => {
          video.pause();
        });
      }
    });
  });
</script>
