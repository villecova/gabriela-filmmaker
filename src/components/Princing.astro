---
import en from '../i18n/messages/en.json';
import es from '../i18n/messages/es.json';
import PricingCard from './shared/PricingCard.astro';

const lang = Astro.url.pathname.includes('/es') ? 'es' : 'en';
const t = lang === 'es' ? es : en;

const plans = [
  {
    title: 'Essential',
    price: '$700',
    description: 'Perfect for intimate ceremonies or elopements.',
    features: [
      '3-hour coverage',
      '1 videographer',
      '3–5 min highlight video',
      'Digital delivery in 3 weeks',
      'Licensed music',
      'Single camera setup'
    ],
    buttonText: 'Book now',
  },
  {
    title: 'Classic',
    price: '$1,200',
    description: 'Great for small to medium weddings.',
    features: [
      'Up to 6-hour coverage',
      '1 videographer + basic drone',
      '4–6 min highlight video',
      '20–30 min extended film',
      'Professional audio for vows & ceremony',
      'Digital delivery in 4 weeks'
    ],
    buttonText: 'Book now',
  },
  {
    title: 'Premium',
    price: '$2,000',
    description: 'Complete coverage for full-day events.',
    features: [
      'Up to 10-hour coverage',
      '2 videographers',
      'Professional drone footage',
      '5–7 min highlight video',
      '30–60 min cinematic film',
      'USB box + online gallery',
      '1-min trailer for social media'
    ],
    buttonText: 'Book now',
  },
  {
    title: 'Custom',
    price: 'Contact',
    description: 'Tailored packages for multi-day or destination weddings.',
    features: [
      'Flexible multi-day coverage',
      'Pre-wedding or trash-the-dress session',
      'Creative consultation',
      '4K cinematic footage',
      'Vertical videos for reels/TikTok',
      'Fast-track delivery available'
    ],
    buttonText: 'Schedule a call',
  }
];

---

<section class="bg-white py-20 md:py-32" id="pricing">
  <div class="max-w-screen-xl mx-auto px-6 md:px-12">
    <div class="text-center mb-16 md:mb-20">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-main text-taupe mb-3 tracking-tight">
        {t.pricing.title}
      </h2>
      <div class="flex items-center justify-center gap-4 text-dusty text-xl mb-6">
        <span>•</span><span>•</span><span>•</span>
      </div>
      <p class="text-lg md:text-xl text-taupe/60 font-light">
        {t.pricing.subtitle}
      </p>
    </div>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {plans.map((plan) => (
        <PricingCard
          title={plan.title}
          price={plan.price}
          description={plan.description}
          features={plan.features}
          buttonText={plan.buttonText}
        />
      ))}
    </div>
  </div>
</section>
