---
import Logo from './shared/Logo.astro';

const lang = Astro.url.pathname.includes('/es') ? 'es' : 'en';
const currentYear = new Date().getFullYear();

const tagline = lang === 'es' ? 'Videos de boda atemporales' : 'Timeless wedding films';
---

<footer class="bg-charcoal text-white">
  <div class="max-w-screen-xl mx-auto px-6 md:px-12 py-16">
    
    <div class="flex flex-col items-center text-center space-y-6">
      <!-- Logo -->
      <Logo size="large" class="text-white" />
      
      <!-- Tagline -->
      <p class="text-lg text-white/70 font-light tracking-wide">
        {tagline}
      </p>
    </div>

    <!-- Copyright -->
    <div class="text-center text-xs text-white/40 mt-12 pt-8 border-t border-white/10">
      Â© {currentYear} PolkaDots Cinema
    </div>
  </div>
</footer>
