---
import Button from "./shared/Button.astro";
import Logo from "./shared/Logo.astro";

import { getLang, getTranslations, getBasePath } from '../i18n/utils.js';

const currentPath = Astro.url.pathname;
const lang = getLang(Astro.url);
const translations = getTranslations(lang);
const base = getBasePath(lang);

function getLangPath(code: string) {
  // Remover /es del path si existe (EN no tiene prefijo)
  const pathWithoutLang = currentPath.replace(/^\/es/, '') || '/';
  
  if (code === 'es') {
    // Ir a español: agregar /es al inicio
    return pathWithoutLang === '/' ? '/es' : `/es${pathWithoutLang}`;
  } else {
    // Ir a inglés: usar path sin prefijo
    return pathWithoutLang;
  }
}


// Función para determinar si un item está activo
function isActive(href: string): boolean {
  const path = currentPath.replace(/\/$/, ''); // Remover trailing slash
  const hrefHash = href.includes('#') ? href.split('#')[1] : ''; // Hash del href
  
  // Normalizar paths (remover /en o /es)
  const normalizedPath = path.replace(/^\/(en|es)/, '') || '/';
  const normalizedHref = href.replace(/#.*$/, '').replace(/^\/(en|es)/, '') || '/';
  
  // Si el href tiene un hash
  if (hrefHash) {
    // Solo activar #hero cuando estamos en home (/, /en, /es) sin hash visible
    // Los otros hashes (#about, #pricing) se manejarán con JS del lado del cliente
    if (hrefHash === 'hero' && (normalizedPath === '/' || normalizedPath === '')) {
      return true;
    }
    // Para otros hashes, no activar por defecto (se activarán con scroll en el cliente)
    return false;
  }
  
  // Para rutas sin hash (como /gallery, /contact), comparar paths normalizados
  return normalizedPath === normalizedHref;
}

const navItems = [
  { label: translations.navbar.home, href: `${base}/#hero` },
  { label: translations.navbar.portfolio, href: `${base}/gallery` },
  { label: translations.navbar.about, href: `${base}/#about` },
  { label: translations.navbar.pricing, href: `${base}/#pricing` },
  { label: translations.navbar.contact, href: `${base}/contact` },
].map(item => ({ ...item, active: isActive(item.href) }));

const languages = [
  { code: 'en', label: 'English' },
  { code: 'es', label: 'Español' },
];

---

<nav class="bg-white dark:bg-gray-900 fixed w-full z-20 top-0 start-0">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto px-6 md:px-12 py-4">
  <Logo href={`${base}/`} size="small" multiline={false} showCinema={false} as="span" data-collapse-toggle="navbar-default" />
  <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse items-center">
    <span class="hidden md:block">
      <Button href={`${base}/contact`} label={lang === 'es' ? 'Consultar disponibilidad' : 'Check Availability'} variant="secondary" />
    </span>

      <button data-collapse-toggle="navbar-sticky" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-sticky" aria-expanded="false">
        <span class="sr-only">Open main menu</span>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
    </button>
      <button data-dropdown-toggle="language-dropdown-menu" class="inline-flex items-center font-medium justify-center md:pl-8 text-sm text-gray-900 dark:text-white rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-700">
        {lang.toUpperCase()}
      </button>
  </div>
  <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-sticky">
    <ul class="flex flex-col p-4 md:p-0 mt-4 font-medium rounded-lg bg-white md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
      {navItems.map(({label, href, active}) =>(
        <li class="group">
          <a 
            class={`relative block py-2 px-3 md:px-0 md:pb-1 my-2 transition-colors duration-300 uppercase text-xs tracking-widest ${
              active 
                ? "text-dusty" 
                : "text-taupe group-hover:text-dusty"
            }`} 
            href={href} 
            aria-current={active ? "page" : undefined}
          >
            {label}
            <span class={`absolute -bottom-1 left-3 md:left-1/2 md:-translate-x-1/2 h-px bg-dusty/70 transition-all duration-300 ease-out ${
              active ? "w-8 md:w-3/5" : "w-0 group-hover:w-8 md:group-hover:w-3/5"
            }`}></span>
          </a>
        </li>
      ))}
      <!-- CTA en mobile -->
      <li class="md:hidden mt-4">
        <Button href={`${base}/contact`} label={lang === 'es' ? 'Consultar disponibilidad' : 'Check Availability'} variant="secondary" fullWidth />
      </li>
    </ul>
  </div>
  </div>
</nav>

  <!-- Dropdown -->
    <div
    id="language-dropdown-menu"
    class="z-50 hidden my-4 text-base list-none bg-charcoal rounded shadow-lg"
  >
    <ul class="py-2" role="menu" aria-labelledby="language-toggle">
      {languages.map(({ code, label }) => (
        <li>
          <a
            href={getLangPath(code)}
            class={`block px-4 py-2 text-sm ${
              lang === code
                ? 'font-semibold text-dusty'
                : 'text-white/80 hover:bg-white/10 hover:text-white'
            }`}
            role="menuitem"
            aria-current={lang === code ? 'page' : undefined}
          >
            {label}
          </a>
        </li>
      ))}
    </ul>
  </div>
  

<script>
document.addEventListener('DOMContentLoaded', () => {
  const toggleButton = document.querySelector('[data-collapse-toggle="navbar-sticky"]') as HTMLButtonElement | null;
  const menu = document.getElementById('navbar-sticky');
  const navLinks = document.querySelectorAll('#navbar-sticky a[href^="#"], #navbar-sticky a[href^="/"]');

  // Cerrar al hacer click en un enlace del menú
  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      if (
        window.innerWidth < 768 &&
        toggleButton &&
        toggleButton.getAttribute('aria-expanded') === 'true'
      ) {
        toggleButton.click();
      }
    });
  });

  // Cerrar al hacer click fuera del menú
  document.addEventListener('click', (event) => {
    const target = event.target as Node;

    if (
      window.innerWidth < 768 &&
      toggleButton &&
      menu &&
      toggleButton.getAttribute('aria-expanded') === 'true' &&
      !menu.contains(target) &&
      !toggleButton.contains(target)
    ) {
      toggleButton.click();
    }
  });

  // Activar links del navbar según la sección visible (solo en home)
  const currentPath = window.location.pathname;
  const isHomePage = currentPath === '/' || currentPath === '/en' || currentPath === '/es' || currentPath.endsWith('/en/') || currentPath.endsWith('/es/');
  
  if (isHomePage) {
    const sections = {
      'hero': document.getElementById('hero'),
      'about': document.getElementById('about'),
      'pricing': document.getElementById('pricing'),
      'faqs': document.getElementById('faqs')
    };

    const navItems = document.querySelectorAll('#navbar-sticky a[href*="#"]');
    
    // Función para actualizar el estado activo
    const updateActiveNav = () => {
      const scrollPosition = window.scrollY + 150; // Offset para activar antes de llegar
      
      // Si estamos en el top, activar solo #hero
      if (window.scrollY < 200) {
        navItems.forEach(item => {
          const href = item.getAttribute('href') || '';
          const hash = href.split('#')[1];
          const parent = item.closest('li');
          if (parent) {
            if (hash === 'hero') {
              item.classList.add('text-dusty');
              item.classList.remove('text-taupe');
              const underline = parent.querySelector('span');
              if (underline) {
                underline.classList.add('w-8', 'md:w-3/5');
                underline.classList.remove('w-0');
              }
            } else {
              item.classList.remove('text-dusty');
              item.classList.add('text-taupe');
              const underline = parent.querySelector('span');
              if (underline) {
                underline.classList.remove('w-8', 'md:w-3/5');
                underline.classList.add('w-0');
              }
            }
          }
        });
        return;
      }

      // Verificar cada sección
      let activeSection = 'hero';
      Object.entries(sections).forEach(([id, element]) => {
        if (element) {
          const rect = element.getBoundingClientRect();
          if (rect.top <= scrollPosition && rect.bottom >= scrollPosition) {
            activeSection = id;
          }
        }
      });

      // Actualizar clases activas
      navItems.forEach(item => {
        const href = item.getAttribute('href') || '';
        const hash = href.split('#')[1];
        const parent = item.closest('li');
        if (parent) {
          if (hash === activeSection) {
            item.classList.add('text-dusty');
            item.classList.remove('text-taupe');
            const underline = parent.querySelector('span');
            if (underline) {
              underline.classList.add('w-8', 'md:w-3/5');
              underline.classList.remove('w-0');
            }
          } else {
            item.classList.remove('text-dusty');
            item.classList.add('text-taupe');
            const underline = parent.querySelector('span');
            if (underline) {
              underline.classList.remove('w-8', 'md:w-3/5');
              underline.classList.add('w-0');
            }
          }
        }
      });
    };

    // Actualizar al hacer scroll
    let ticking = false;
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          updateActiveNav();
          ticking = false;
        });
        ticking = true;
      }
    });

    // Actualizar al cargar la página
    updateActiveNav();

    // Actualizar cuando cambia el hash
    window.addEventListener('hashchange', updateActiveNav);
  }
});


</script>
